      displayName: getToken

      get:
      

        queryParameters:

          uniqueId:
            description: uniqueId  
            type: string         
            example: uniqueId1
            required: true            
          uniqueRef:
            description: uniqueRef  
            type: string         
            example: uniqueRef1
            required: true            
            
 
            
        description: Gets the token
        responses:
              200:
                body:
                  application/json:
                    example: |
                       {
                          "token": "fdcc60aabcbd838a8b1812e77f3e387e3997e739b50a8e6e1434f69a6da89b17"
                         }
/checkToken:
